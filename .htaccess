# Aktifkan mod_rewrite
RewriteEngine On

# Pastikan URL berakhiran slash (opsional, jika kamu mau konsistensi URL)
# RewriteCond %{REQUEST_FILENAME} !-f
# RewriteRule ^(.*[^/])$ /$1/ [L,R=301]

# Redirect 404 ke halaman kustom
ErrorDocument 404 /aplikasi-surat-web/404.php

# Lindungi file sensitif
<FilesMatch "\.(htaccess|htpasswd|ini|phps|fla|psd|log|sh)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Atur default index file
DirectoryIndex index.php index.html

# Nonaktifkan listing folder
Options -Indexes

# Atur waktu cache browser (opsional untuk performa)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
</IfModule>
